<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="2dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:padding="14dp">

        <!-- 썸네일 이미지 -->
        <ImageView
            android:id="@+id/poiImage"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="14dp"
            android:background="@drawable/loading"
            android:contentDescription="가게 이미지"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tourName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/tourCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카테고리"
                    android:textSize="14sp"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <!-- Flow가 둘을 한 줄에 배치하다가 공간 없으면 자동 줄바꿈 -->
                <androidx.constraintlayout.helper.widget.Flow
                    android:id="@+id/name_desc_flow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="tourName,tourCategory"
                    app:flow_wrapMode="aligned"
                    app:flow_horizontalAlign="start"
                    app:flow_horizontalGap="8dp"
                    app:flow_verticalGap="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/tourAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:text="주소"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tourDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:text="설명"
                android:textColor="#888888"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
