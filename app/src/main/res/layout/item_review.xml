<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgThumb"
                android:layout_width="88dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- 코스 난이도 -->
                <TextView
                    android:id="@+id/review_course_diff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 중"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/ic_diff"/>

                <TextView
                    android:id="@+id/review_course_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="백룡천 둘레길 (평창마을길)"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/review_course_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="길이 시간 태크?"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/review_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="후기"
            android:textSize="12sp"
            android:textColor="@color/black" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
