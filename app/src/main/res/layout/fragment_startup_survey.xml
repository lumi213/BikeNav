<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="#B3000000">

    <!-- 상단 질문 -->
    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="오늘은 어떤 기분이신가요?"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 스텝 표시 -->
    <TextView
        android:id="@+id/tvStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q1/3"
        android:textColor="@android:color/white"
        android:alpha="0.8"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestion"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"/>

    <!-- 좌/우 반 화면 클릭 히트영역 -->
    <View
        android:id="@+id/leftHit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/tvStep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rightHit"
        app:layout_constraintBottom_toTopOf="@id/btnSkip"
        app:layout_constraintHorizontal_weight="1"/>

    <View
        android:id="@+id/rightHit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/tvStep"
        app:layout_constraintStart_toEndOf="@id/leftHit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSkip"
        app:layout_constraintHorizontal_weight="1"/>

    <!-- 좌측 텍스트 -->
    <TextView
        android:id="@+id/tvLeft"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="산책"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/leftHit"
        app:layout_constraintBottom_toBottomOf="@+id/leftHit"
        app:layout_constraintStart_toStartOf="@+id/leftHit"
        app:layout_constraintEnd_toEndOf="@+id/leftHit"/>

    <!-- 우측 텍스트 -->
    <TextView
        android:id="@+id/tvRight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="자전거길"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/rightHit"
        app:layout_constraintBottom_toBottomOf="@+id/rightHit"
        app:layout_constraintStart_toStartOf="@+id/rightHit"
        app:layout_constraintEnd_toEndOf="@+id/rightHit"/>

    <!-- 중앙 구분선(옵션) -->
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#40FFFFFF"
        app:layout_constraintTop_toTopOf="@id/leftHit"
        app:layout_constraintBottom_toBottomOf="@id/leftHit"
        app:layout_constraintStart_toEndOf="@id/leftHit"
        app:layout_constraintEnd_toStartOf="@id/rightHit"/>

    <!-- 하단 스킵 버튼 -->
    <Button
        android:id="@+id/btnSkip"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="추천 넘어가기"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="?attr/colorPrimary"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- GPT 추천 대기 로딩 패널 (오버레이) -->
    <LinearLayout
        android:id="@+id/loadingPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="#66000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천 코스 찾는 중…"
            android:textColor="@android:color/white"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
